<div class="navmenu">
    <input type="checkbox" title="Menu expand/collapse toggle" id="navmenu-toggle" class="navmenu-icon"/>
    <label for="navmenu-toggle" class="navmenu-icon">
        <FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Fill"/>
    </label>
    <nav class="sitenav" aria-labelledby="main-menu" onclick="document.getElementById('navmenu-toggle').click();">
        <FluentNavMenu Id="main-menu" Width="250" Collapsible="true" Title="Navigation menu" @bind-Expanded="expanded">
            <FluentNavLink Href="home" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.Home())" IconColor="Color.Accent">Home</FluentNavLink>
            <AuthorizeView>
                <Authorized>
                    <FluentNavLink Href="listings" Icon="@(new Icons.Regular.Size20.List())" IconColor="Color.Accent">Listings</FluentNavLink>
                    <FluentNavLink Href="facebook-templates" Icon="@(new Icons.Regular.Size20.MailTemplate())" IconColor="Color.Accent">Facebook templates</FluentNavLink>
                    <FluentNavLink Href="facebook-groups" Icon="@(new Icons.Regular.Size20.Group())" IconColor="Color.Accent">Facebook Groups</FluentNavLink>
                </Authorized>
            </AuthorizeView>
        </FluentNavMenu>
    </nav>
</div>

@code {
    private bool expanded = true;
}